<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  
  <!-- Appenders -->
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
        <File name="FileLogger" fileName="logs/framework.log" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n</Pattern>
            </PatternLayout>
        </File>
  </Appenders>

  <!-- Root logger -->
  <Loggers>
    <!-- Suppress noisy external libraries -->
    <Logger name="org.apache.poi" level="ERROR" additivity="false"/>
    <Logger name="org.openxmlformats" level="ERROR" additivity="false"/>
    <Logger name="tech.grasshopper" level="ERROR" additivity="false"/>
    <Logger name="org.testng" level="ERROR" additivity="false"/>
    <Logger name="org.openqa.selenium" level="INFO" additivity="false"/>
    <Logger name="org.apache.pdfbox" level="ERROR" additivity="false"/>
    <Logger name="sun.awt" level="ERROR" additivity="false"/>
    <Logger name="java.awt" level="ERROR" additivity="false"/>

    <!-- Your project logs (keep visible) -->
    <Logger name="com.framework" level="INFO" additivity="false">
      <AppenderRef ref="Console"/>
       <AppenderRef ref="FileLogger"/>
      
    </Logger>

    <!-- Root fallback -->
    <Root level="ERROR">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
